<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>es.upm.fiware</groupId>
    <artifactId>rss</artifactId>
    <packaging>pom</packaging>
    <name>Business-Ecosystem-RSS</name>
    <version>4.4.3</version>
    <description></description>

    <organization>
        <name>Universidad Politécnica de Madrid</name>
        <url>http://conwet.fi.upm.es</url>
    </organization>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <pathToFilters>.</pathToFilters>
        <tomcat.home>/usr/share/tomcat${tomcat.version}</tomcat.home>  
        
        <rss.version>4.4.3</rss.version>        
        <core.version>4.4.3</core.version>
        
        <jdk.version>1.8</jdk.version>
        <maven.version>3.2.5</maven.version>
        <maven-surefire-plugin.version>2.18.1</maven-surefire-plugin.version>
        <junit.version>4.12</junit.version>
        <org.springframework.version>4.1.6.RELEASE</org.springframework.version>
        <org.springsecurity.version>4.0.1.RELEASE</org.springsecurity.version>
        <org.hibernate.version>4.3.8.Final</org.hibernate.version>
        <cxf.version>3.0.3</cxf.version>
        <jackson.version>2.5.1</jackson.version>
        <logback.version>1.0.12</logback.version>	
        <janino.version>2.5.16</janino.version>
        <org.dbunit.version>2.4.9</org.dbunit.version>
        <cloning.version>1.9.0</cloning.version>
        <mockito.version>1.10.19</mockito.version>
        <castor.version>1.3.3</castor.version>
        <commons-lang.version>2.6</commons-lang.version>
        <commons-codec.version>1.7</commons-codec.version>
        <commons-vfs.version>1.0</commons-vfs.version>
        <servlet-api.version>2.5</servlet-api.version>
        <javassist.version>3.12.1.GA</javassist.version>
        <cglib-nodep.version>2.2.2</cglib-nodep.version>
        <slf4j-api.version>1.7.4</slf4j-api.version>
        <commons-fileupload.version>1.3</commons-fileupload.version>
        <jstl.version>1.2</jstl.version>
        <commons-io.version>2.4</commons-io.version>
        <commons-dbcp.version>1.4</commons-dbcp.version>
        <mysql.connector.version>5.1.34</mysql.connector.version>
        <httpclient.version>4.0.1</httpclient.version>	
        <cobertura-maven-plugin.version>2.6</cobertura-maven-plugin.version>
    </properties>

    <modules>
        <!--module>Modules that compose the whole bigger module are located here.</module -->               	 		
        <module>rss-core</module>       
        <module>fiware-rss</module>  
    </modules>

    <build>
        <finalName>DSRevenueSharing</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.txt</include>
                    <include>**/*.properties</include>
                    <include>**/*.wsdl</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>**/*.xml</exclude>
                    <exclude>**/*.txt</exclude>
                    <exclude>**/*.properties</exclude>
                    <exclude>**/*.wsdl</exclude>
                </excludes>
            </resource>
        </resources>

        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.txt</include>
                    <include>**/*.properties</include>
                    <include>**/*.wsdl</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>**/*.xml</exclude>
                    <exclude>**/*.txt</exclude>
                    <exclude>**/*.properties</exclude>
                    <exclude>**/*.wsdl</exclude>
                </excludes>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <debug>${compilerInfoDebug}</debug>
                    <optimize>${compilerOptimize}</optimize>
                    <showWarnings>${compilerShowWarnings}</showWarnings>
                    <showDeprecation>${compilerShowDeprecation}</showDeprecation>
                    <verbose>${compilerVerbose}</verbose>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-eclipse-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                    <projectNameTemplate>[artifactId]-[groupId]</projectNameTemplate>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.7.5.201505241946</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
    <!-- Profile localhost (default) -->
        <profile>
            <id>localhost</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <env>localhost</env>
                <compilerInfoDebug>true</compilerInfoDebug>
                <compilerOptimize>false</compilerOptimize>
                <compilerShowWarnings>true</compilerShowWarnings>
                <compilerShowDeprecation>true</compilerShowDeprecation>
                <compilerVerbose>true</compilerVerbose>
            </properties>            
        </profile>
    	<profile>
            <id>default</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <file> 
                    <exists>${basedir}</exists> 
                </file> 
            </activation>
            <properties>
                <env>default</env>
                <compilerInfoDebug>true</compilerInfoDebug>
                <compilerOptimize>false</compilerOptimize>
                <compilerShowWarnings>true</compilerShowWarnings>
                <compilerShowDeprecation>true</compilerShowDeprecation>
                <compilerVerbose>true</compilerVerbose>
            </properties>
        </profile>     
        <profile>
            <id>license</id>
            <activation>
                <property>
                    <name>run-license</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <inherited>false</inherited>
                        <groupId>com.mycila.maven-license-plugin</groupId>
                        <artifactId>maven-license-plugin</artifactId>
                        <version>1.8.0</version>
                        <configuration>
                            <header>${basedir}/license/license.txt</header>
                            <failIfMissing>true</failIfMissing>
                            <aggregate>true</aggregate>
                            <properties>
                                <organisation>
                                    Universidad Politécnica de Madrid
                                </organisation>						
                                <year>2015</year>
                                <Author>Francisco de la Vega - fdelavega@fi.upm.es</Author>
                            </properties>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <developers>
        <developer>
            <id>fdelavega</id>
            <name>Francisco de la Vega</name>
            <email>fdelavega@fi.upm.es</email>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone/>
        </developer>
    </developers>

</project>
