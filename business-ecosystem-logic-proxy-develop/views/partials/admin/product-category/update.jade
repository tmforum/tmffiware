.row(ng-switch="updateVM.item.status")
  .col-xs-12
    include ./breadcrumb.jade
  .col-xs-12(ng-switch-when="LOADED")
    .row
      .col-xs-12
        ui-view
          include ./update-form.jade
  .col-xs-12(ng-switch-when="ERROR")
    .alert.alert-danger.text-center {{ updateVM.error }}
  .col-xs-12(ng-switch-default)
    .container-spinner
      span.fa.fa-spinner.fa-spin.fa-2x